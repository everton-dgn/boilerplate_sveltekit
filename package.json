{
  "name": "boilerplate_sveltekit",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Ã‰verton Toffanetto",
  "description": "This application is a boilerplate for complex and large systems, especially those that need to scale with security and code quality.",
  "repository": "https://github.com/everton-dgn/boilerplate_sveltekit",
  "scripts": {
    "dev": "vite dev --port 4173",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check ./src",
    "format": "biome check --write ./src",
    "biome:ci": "biome ci ./src --no-errors-on-unmatched --files-ignore-unknown=true",
    "test": "vitest run",
    "test:c": "vitest run --coverage",
    "test:w": "vitest",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:ci": "vitest run related",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:codegen": "playwright codegen http://localhost:4173",
    "check:update": "pnpm update --interactive --latest",
    "update:pnpm": "corepack use pnpm@latest",
    "detect:duplicates": "pnpx jscpd ./src/**/*.ts",
    "postinstall": "pnpx lefthook install"
  },
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild",
      "lefthook"
    ]
  },
  "packageManager": "pnpm@10.6.1+sha512.40ee09af407fa9fbb5fbfb8e1cb40fbb74c0af0c3e10e9224d7b53c7658528615b2c92450e74cfad91e3a2dcafe3ce4050d80bda71d757756d2ce2b66213e9a3",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@fontsource/inter": "5.2.5",
    "@playwright/test": "1.51.0",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.1",
    "@semantic-release/npm": "12.0.1",
    "@sveltejs/adapter-vercel": "5.6.3",
    "@sveltejs/kit": "2.19.0",
    "@sveltejs/vite-plugin-svelte": "5.0.3",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/svelte": "5.2.7",
    "@testing-library/user-event": "14.6.1",
    "@types/jsdom-global": "3.0.7",
    "@types/node": "22.13.9",
    "@vitest/coverage-v8": "3.0.8",
    "@vitest/ui": "3.0.8",
    "autoprefixer": "10.4.20",
    "cssnano": "7.0.6",
    "dotenv": "16.4.7",
    "globals": "16.0.0",
    "jsdom": "26.0.0",
    "jsdom-global": "3.0.2",
    "lefthook": "1.11.3",
    "postcss": "8.5.3",
    "postcss-import": "16.1.0",
    "postcss-preset-env": "10.1.5",
    "semantic-release": "24.2.3",
    "svelte": "5.22.6",
    "svelte-check": "4.1.5",
    "typescript": "5.8.2",
    "vite": "6.2.1",
    "vitest": "3.0.8"
  }
}
