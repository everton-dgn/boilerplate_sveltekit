{
  "name": "boilerplate_sveltekit",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Ã‰verton Toffanetto",
  "description": "This application is a boilerplate for complex and large systems, especially those that need to scale with security and code quality.",
  "repository": "https://github.com/everton-dgn/boilerplate_sveltekit",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && tsc --noEmit",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --cache --check src && eslint --cache src --max-warnings=0",
    "lint:fix": "eslint --cache --fix src",
    "test": "vitest run",
    "test:c": "vitest run --coverage",
    "test:w": "vitest",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:ci": "vitest run related",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:codegen": "playwright codegen http://localhost:4321",
    "check:update": "pnpm update --interactive --latest",
    "detect:duplicates": "pnpx jscpd ./src/**/*.ts",
    "postinstall": "pnpx lefthook install"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "lefthook"
    ]
  },
  "dependencies": {
    "clsx": "2.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/compat": "1.2.6",
    "@eslint/js": "9.20.0",
    "@fontsource/poppins": "5.1.1",
    "@intlify/eslint-plugin-svelte": "0.5.0",
    "@playwright/test": "1.50.1",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "10.1.7",
    "@semantic-release/npm": "12.0.1",
    "@sveltejs/adapter-vercel": "5.6.2",
    "@sveltejs/kit": "2.17.2",
    "@sveltejs/vite-plugin-svelte": "5.0.3",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/svelte": "5.2.7",
    "@testing-library/user-event": "14.6.1",
    "@types/jsdom-global": "3.0.7",
    "@types/node": "22.13.4",
    "@typescript-eslint/eslint-plugin": "8.24.1",
    "@typescript-eslint/parser": "8.24.1",
    "@vitest/coverage-v8": "3.0.6",
    "@vitest/ui": "3.0.6",
    "autoprefixer": "10.4.20",
    "cssnano": "7.0.6",
    "dotenv": "16.4.7",
    "eslint": "9.20.1",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-playwright": "2.2.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-svelte": "2.46.1",
    "globals": "15.15.0",
    "jsdom": "26.0.0",
    "jsdom-global": "3.0.2",
    "lefthook": "1.10.10",
    "postcss": "8.5.1",
    "postcss-import": "16.1.0",
    "postcss-preset-env": "10.1.3",
    "prettier": "3.5.1",
    "prettier-plugin-svelte": "3.3.3",
    "semantic-release": "24.1.0",
    "svelte": "5.20.2",
    "svelte-check": "4.1.4",
    "svelte-eslint-parser": "0.43.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.24.1",
    "vite": "6.1.0",
    "vitest": "3.0.6"
  }
}
